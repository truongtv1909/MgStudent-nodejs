extends ../layout/common
block common
    nav.navbar.navbar-expand-lg.navbar-light.bg-info
        a.navbar-brand(href='#')
            img(src="/logo/logo.jpg", alt="").d-inline-block.align-top.nav-img.mr-1
        .collapse.navbar-collapse
            .navbar-nav
                a.nav-item.nav-link(href='/') Home
                a.nav-item.nav-link(href='/user') User
    .container
        h1 This is user-create component
        if errData
            each err in errData
                .alert.alert-danger(role="alert")=err
        form(action="/user/create", method="post",enctype="multipart/form-data")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Name
                input.form-control(type="text", name ="name",value=data?data.name:"")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Age
                input.form-control(type="text", name ="age",value=data?data.age:"")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Email
                input.form-control(type="text", name ="email",value=data?data.email:"")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Password
                input.form-control(type="text", name ="password",value=data?data.password:"")
            .input-group.input-group.mb-2
                .input-group-prepend 
                    span.input-group-text Avatar
                        input.form-control-file(type="file", name ="logo").ml-1
            button.btn.btn-primary.mt-2 Create
            a.btn.btn-danger.mt-2.ml-1(href="/user") Cancel