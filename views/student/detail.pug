extends ../layout/common
block common
    nav.navbar.navbar-expand-lg.navbar-light.bg-info
        a.navbar-brand(href='#')
            img(src="/logo/logo.jpg", alt="").d-inline-block.align-top.nav-img.mr-1
        .collapse.navbar-collapse
            .navbar-nav
                a.nav-item.nav-link(href='/') Home
                a.nav-item.nav-link(href='/student') Student
    .container
        h1 This is student detail component
        if errData
            each err in errData
                .alert.alert-danger(role="alert")=err
        form(action="/student/update", method ="POST")
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Student ID
                input.form-control(type="text",name ="id", value=''+students.id)
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Frist name
                input.form-control(type="text",name = "fristname", value=''+students.fristname?students.fristname:draft?draft.fristname:'')
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Last name
                input.form-control(type="text",name = "lastname", value=''+students.lastname?students.lastname:draft?draft.lastname:'')
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Phone
                input.form-control(type="text",name = "phone", value=''+students.phone?students.phone:draft?draft.phone:'')
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Address
                input.form-control(type="text",name = "address", value=''+students.address?students.address:draft?draft.address:'')
            .input-group.input-group-lg.mb-3
                .input-group-prepend 
                    span.input-group-text Email
                input.form-control(type="text",name = "email", value=''+students.email?students.email:draft?draft.email:'')
            .input-group.input-group-lg.mb-3
                    .input-group-prepend
                        span.input-group-text Description
                    textarea.form-control(aria-label='With textarea', name = "description")=students.description?students.description:draft?draft.description:''
            a.btn.btn-danger.mt-1(href="/student") Back
            button.btn.btn-primary.mt-1.ml-1 Update